<Window x:Class="UbisoftTileEditor.TileEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:UbisoftTileEditor"
        Title="TileEditorWindow" Height="1200" Width="1600">
	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="_File">
				<MenuItem Header="_New"/>
				<MenuItem Header="_Open"/>
				<MenuItem Header="_Save" Click="MenuItem_OnSaveClick"/>
			</MenuItem>
		</Menu>
		<Grid>
			<local:WorldViewControl x:Name="WorldView" Width="1024" Height="768"></local:WorldViewControl>
		</Grid>
	</DockPanel>
</Window>
