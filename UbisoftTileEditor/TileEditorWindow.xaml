<Window x:Class="UbisoftTileEditor.TileEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:UbisoftTileEditor"
        xmlns:viewModels="clr-namespace:UbisoftTileEditor.ViewModels"
        Title="Ubisoft Tile Editor" Height="1100" Width="1400">
	<Window.DataContext>
		<viewModels:TileEditorWindowViewModel />
	</Window.DataContext>
	<DockPanel>
		<Menu DockPanel.Dock="Top">
			<MenuItem Header="_File">
				<MenuItem Header="_New"/>
				<MenuItem Header="_Open"/>
				<MenuItem Header="_Save" Click="MenuItem_OnSaveClick"/>
			</MenuItem>
		</Menu>
		<local:WorldViewControl x:Name="WorldView" GameWorld="{Binding GameWorld}" HorizontalAlignment="Stretch" VerticalAlignment="Top"></local:WorldViewControl>
	</DockPanel>
</Window>
